datasource db {
  provider = "postgresql"
  url      = env("COMPLETED_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/completed-client"
}

model CompletedTask {
  id             String   @id @default(cuid())
  content        String
  userId         String
  boardId        String
  columnId       String
  originalCardId String
  order          Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model CompletedColumn {
  id        String   @id @default(uuid())
  title     String
  boardId   String
  userId    String
  order     Int      @default(0)
  createdAt DateTime @default(now())
}
