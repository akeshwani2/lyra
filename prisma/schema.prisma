generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id        String   @id @default(cuid())
  title     String
  userId    String   
  columns   Column[] @relation("BoardToColumns")  // Remove onDelete here
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Column {
  id        String   @id @default(cuid())
  title     String
  order     Int
  boardId   String
  board     Board    @relation("BoardToColumns", fields: [boardId], references: [id], onDelete: Cascade)  // Keep onDelete here
  cards     Card[]   @relation("ColumnToCards")  // Remove onDelete here
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardId])
}

model Card {
  id        String   @id @default(cuid())
  content   String   @db.Text
  order     Int
  columnId  String
  column    Column   @relation("ColumnToCards", fields: [columnId], references: [id], onDelete: Cascade)  // Keep onDelete here
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([columnId])
}